<?xml version="1.0" encoding="utf-8"?>
<!--
Définition de :
	taille de du widget
	delai de rafraichissement en ms
	la vue/layout de base lorsque le widget est lancé
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    style="@style/WidgetBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:baselineAligned="true"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/libelleRappelwidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add_animal"
                android:layout_weight="1"
                android:text="@string/rappelwidget"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_add_animal" />

            <TextView
                android:id="@+id/libelleRappelwidgetTexte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add_animal"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/text_size_add_animal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/libelleInfowidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add_animal"
                android:layout_weight="1"
                android:text="@string/infowidget"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_add_animal" />

            <TextView
                android:id="@+id/libelleInfowidgetTexte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add_animal"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/text_size_add_animal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_mafanimally_widg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fanimallybtnwidget"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_urgence_widg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/urgencewidget"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_patte_moi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/patteWidget"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

