<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/afficheanimalphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:layout_marginLeft="36dp"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp" >
                    
                     <TextView
                    android:id="@+id/afficheAnimalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"              
                    android:layout_marginRight="44dp"
                    android:text="zza"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/afficheAnimalDateNaissance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"    
                    android:layout_marginTop="1dp"                               
                    android:text="ee"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

               

            </LinearLayout>

            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
               		 android:layout_weight="1"
                  	android:layout_marginTop="20dp"
                    android:layout_marginLeft="17dp" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAfficheAnimalTypetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_lib"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        <TextView
                            android:id="@+id/afficheAnimalType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAfficheAnimalRacetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/race_lib"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/afficheAnimalRace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAfficheAnimalRobetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/robe_lib"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        
                        <TextView
                            android:id="@+id/afficheAnimalRobe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textViewAfficheAnimalMaletxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sexe :"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        
                        <TextView
                            android:id="@+id/afficheAnimalMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >
                        
                         <TextView
                            android:id="@+id/textViewAfficheAnimalTatouagetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tatouage_lib"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                         
                         <TextView
                            android:id="@+id/afficheAnimalTatouage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >
                        
                         <TextView
                            android:id="@+id/textViewAfficheAnimalAssurancetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assurance"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                         
                         <TextView
                            android:id="@+id/afficheAnimalAssurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" >

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" >
                         
                          <ImageView
                                android:id="@+id/afficheAnimalModifier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/modify" />

                          <ImageView
                              android:id="@+id/afficheAnimalSupprimer"
                              android:layout_width="wrap_content"
                              android:layout_gravity="center"
                              android:layout_height="wrap_content"
                              android:src="@drawable/delete" />

                    </TableRow>
                </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>